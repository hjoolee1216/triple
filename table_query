사용자 포인트 현황 테이블 
CREATE TABLE MEMBER_POINT_STATE(
USER_ID VARCHAR(64) PRIMARY KEY,
CURRENT_POINT INT DEFAULT 0, 
ACCUM_POINT INT DEFAULT 0, 
DELETE_POINT INT DEFAULT 0, 
REG_DATE DATETIME,
MOD_DATE DATETIME)

CREATE INDEX idx1 ON MEMBER_POINT_STATE
(USER_ID)

첨부사진 테이블 
CREATE TABLE ATTACHED_PHOTO(ID INT AUTO_INCREMENT PRIMARY KEY,
REVIEW_ID VARCHAR(64) NOT NULL,
PHOTO VARCHAR(64) NOT NULL
)

CREATE INDEX idx2 ON ATTACHED_PHOTO
(REVIEW_ID)

리뷰테이블 
CREATE TABLE REVIEW(
REVIEW_ID VARCHAR(64) PRIMARY KEY, 
USER_ID VARCHAR(64) NOT NULL,  
CONTENT VARCHAR(100),
PLACE_ID VARCHAR(64) NOT NULL, 
REG_DATE DATETIME,
MOD_DATE DATETIME,
DEL_YN INT DEFAULT 0) 

CREATE INDEX idx3 ON REVIEW
(USER_ID, PLACE_ID)
CREATE INDEX idx4 ON REVIEW
(REVIEW_ID)


사용자 리뷰 로그 테이블 
CREATE TABLE MEMBER_POINT_LOG
(LOG_ID INT AUTO_INCREMENT
PRIMARY KEY,
USER_ID VARCHAR(64) NOT NULL,
POINT INT,  
TYPE CHAR(1),
REG_DATE DATETIME
)
